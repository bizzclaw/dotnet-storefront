@model Gummi.Models.Product
@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout";
}

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>@Model.Name</h2>
            <h3>Price: @Model.DisplayPrice("$")</h3>
        </div>
        <div class="panel-body">
            <p>@Model.Description</p>
            <hr />
            
            <button class="btn btn-warning" onclick="location.href='@Url.Action("Index")'">Back</button>
            <button class="btn btn-success" onclick="location.href='@Url.Action("CreateReveiw", new { id = Model.Id })'">Submit Review</button>
            <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete")'">Delete</button>
        </div>


    </div>
</div>
